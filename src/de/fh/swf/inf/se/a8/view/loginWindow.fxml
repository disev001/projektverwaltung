      <BorderPane>
         <left>
            <GridPane maxWidth="80.0" minHeight="-Infinity" minWidth="80.0" prefHeight="256.0" prefWidth="80.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label minWidth="6.0" text="Benutzername" />
                  <Label maxHeight="300.0" minHeight="300.0" prefHeight="300.0" text="Passwort" GridPane.rowIndex="1" />
               </children>
               <BorderPane.margin>
                  <Insets left="10.0" />
